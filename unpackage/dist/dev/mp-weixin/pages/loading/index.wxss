}
page .wrap {
  width: 100%;
  height: 100%;
}
page .wrap .img {
  width: 100%;
  height: 100%;
}
page .wrap .button {
  z-index: 999;
  position: fixed;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, 425%);
          transform: translate(-50%, 425%);
  width: 200rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.4);
  border-radius: 8rpx;
  box-shadow: 3rpx 3rpx rgba(140, 140, 140, 0.8), -2rpx 3rpx rgba(140, 140, 140, 0.8), 0rpx -3rpx rgba(140, 140, 140, 0.8), 0rpx 5rpx rgba(140, 140, 140, 0.8);
  text-align: center;
}
page .wrap .button ._span {
  line-height: 80rpx;
  font-family: sans-serif;
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 0.5);
